@model TestDoAn.Models.NhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Home/_LayoutQLCH.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN NHÂN VIÊN</h2>

@using (Html.BeginForm("Edits","QLKV",FormMethod.Post))
