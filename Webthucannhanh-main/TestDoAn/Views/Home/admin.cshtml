
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/jquery-3.5.1.min.js"></script>
	<script src="~/Scripts/popper.min.js"></script>
	<style>
		#radius {
			border: 2px solid black;
			padding: 5px;
			border-radius: 20px;
		}
		#textt{
			text-align:center;
		}
        .login_form{
            width : 35%;
            height:350px;
            padding : 10px;
            margin : 20px 420px;
            background: white;
            text-align: center;
            border-radius : 25px;
        }
        .textbox{
            width:400px;
            padding:8px 0;
            margin : 40px 40px;
            font-size : 16px;
            border : none;
            overflow: hidden;
            border-bottom: 1px solid;

        }
        .input{
            border: none;
            outline : none;
           
        }
    .wrapper { /*background: linear-gradient(#393A3B,#ffffff)*/ 
               background-image: url("https://eskipaper.com/images/cupcake-wallpaper-hd-1.jpg") }

	</style>
	<title></title>
</head>
<body>
    <div >
	<div class="container-fluid">
		<div class="card  ">
			<div class="card-header bg-dark">
				<p class="text-white" id="textt">PHẦN MỀM QUẢN LÝ CỬA HÀNG</p>
			</div>
			<div class="card-body ">
				
                <form class="login_form" action="@Url.Action("login")" method="post">
                    <span>
                        <i class="fa fa-user-circle-o fa-4x" aria-hidden="true"></i>
                    </span>
                    <p>Sign in</p>
                    <div class="textbox">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="input" type="text" name="txtUser" id="txtUser" placeholder="Ten tai khoan" />

                    </div>
                    <div class="textbox">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="input" type="password" name="txtPassword" id="txtPassword" placeholder="Mat Khau" />
                    </div>
                    @{
                        if (ViewBag.flag == 1)
                        {
                            <div class="text-danger">Bạn Điền Tên Tài Khoản và Mật Khẩu</div>
                        }
                        else if(ViewBag.flag==2)
                        {
                            <div class="text-danger">Bạn Nhập Sai Mật Khẩu</div>
                        }
                        else if(ViewBag.flag==3)
                        {
							<div class="text-danger">Tài Khoản Không Tồn Tại</div>
                        }
                    }
                    <input type="submit" class="btn btn-dark" value="Sign in"  />
                </form>

			</div>

            
		</div>
	</div>
    </div>

</body>
</html>
