<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang Chủ</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css">
    <link href="~/Style/QL.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <meta http-equiv="refresh" content="30"
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("IndexEmpty","QLKV")" class="nav-link">Home</a>
                </li>
                
            </ul>

          

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  href="@Url.Action("logout","Home")" role="button">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                @*<img src="/dist/img/AdminLTELogo.png" alt="AdminLTELogo" class="brand-image img-circle elevation-3" style="opacity: .8">*@
                <span class="brand-text font-weight-light indam">QUẢN LÝ CỬA HÀNG</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @*<img src="~/dist/img/avatar2.png" class="img-circle elevation-2" alt="User Image">*@
                    </div>
                    <div class="info">
                        <a href="#" class="d-block indam">@Session["User"]</a>
                    </div>
                </div>
                <div class="form-inline">
                </div>
                <!-- Sidebar Menu -->
                @if (Session["ChucVu"].Equals("quanlykv"))
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                                     with font-awesome or any other icon font library -->
                            <li class="nav-item menu-open">
                                <a class="nav-link active">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>
                                        Quản Lý Nhân Viên
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("IndexNhanVien","QLKV")" class="nav-link active">
                                            <i class="fas fa-list-ul nav-icon"></i>
                                            <p>Danh Sách Nhân Viên</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","QLKV")" class="nav-link active">
                                            <i class="fas fa-plus nav-icon"></i>
                                            <p>Thêm Nhân Viên</p>
                                        </a>
                                    </li>
                                </ul>
                                
                                    <li class="nav-item">
                                        <a href="@Url.Action("IndexHD","QLCH")" class="nav-link active ">
                                            <i class="fas fa-money-bill-alt nav-icon"></i>
                                            <p>Quản Lý Hóa Đơn</p>
                                        </a>
                                    </li>

                                
                            </li>
                            <li class="nav-item">

                            </li>
                        </ul>
                    </nav>

                }
                else 
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                            <li class="nav-item menu-open">
                                <a class="nav-link active bg-white">
                                    <i class="nav-icon fas fa-receipt"></i>
                                    <p>
                                        Quản Lý Hoá Đơn
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview ">
                                    <li class="nav-item">
                                        <a href="@Url.Action("IndexHD","QLCH")" class="nav-link active bg-dark">
                                            <i class="fas fa-money-bill-alt nav-icon"></i>
                                            <p>Danh Sách Hóa Đơn</p>
                                        </a>
                                    </li>
                                    
                                </ul>
                            </li>
                            <li class="nav-item menu-open">
                                <a class="nav-link active bg-white">
                                    <i class="nav-icon fas fa-hockey-puck"></i>
                                    <p>
                                        Quản Lý Nguyên Liệu
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview ">
                                    <li class="nav-item">
                                        <a href="@Url.Action("IndexNL","QLCH")" class="nav-link active bg-dark">
                                            <i class="fas fa-list-ul nav-icon"></i>
                                            <p>Danh Sách Nguyên Liệu</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("IndexNH","QLCH")" class="nav-link active bg-dark">
                                            <i class="fas fa-plus nav-icon"></i>
                                            <p>Nhập Nguyên Liệu</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                }

                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            
                @RenderBody()
           
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
       
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/adminlte.min.js"></script>
</body>
</html>
