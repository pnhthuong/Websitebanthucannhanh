<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.5.1.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/popper.min.js"></script>
</head>


<body>
	<div>


	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header bg-secondary">Header</div>
			<div class="card-title ">
				<div class="row">
					<div class="col-md-6">
						<ul class="nav list-group-horizontal">
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Trang chủ", "menu1", null, new { @Class = "text-white" })
							</li>
							
						</ul>
					</div>
					<div class="col-md-6">
						<ul class="nav list-group-horizontal float-right ">
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Trang Chủ", "menu3b", null, new { @Class = "text-white" })
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-2">
						<ul class="nav list-group">
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Quản lý NSX", "IndexNSX", "NSX", null, new { @Class = "text-white" })
							</li>
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Quản lý Nhân Viên", "menu3b", null, new { @Class = "text-white" })
							</li>
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Quản lý loại Hàng Hóa", "menu3b", null, new { @Class = "text-white" })
							</li>
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Quản lý Hàng Hóa", "menu3b", null, new { @Class = "text-white" })
							</li>
							<li class="nav-item list-group-item bg-danger">
								@Html.ActionLink("Trang chủ", "LayoutMenu", "Home", null, new { @Class = "text-white" })
							</li>
						</ul>

					</div>
					<div class="col-md-10">
						@RenderBody()
					</div>

				</div>
			</div>
			<div class="card-footer bg-danger "></div>
		</div>
	</div>

</body>
</html>
